##
# WebService with NGINX for AhoyDTU
#
server {
	listen 80;
	server_name AhoyDTU; # Ersetzen Sie dies durch Ihre Domain
	location / {
		proxy_pass http://127.0.0.1:8080; # Dies leitet den Verkehr weiter
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}

server {
	listen 81;
	server_name AhoyDTU; # Ersetzen Sie dies durch Ihre Domain
	location / {
		proxy_pass http://127.0.0.1:8081; # Dies leitet den Verkehr weiter
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}

